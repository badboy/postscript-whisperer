/rectangle { % x y w h
    [/h /w /y /x] dup length 0 add dict begin { exch def } forall
        x y moveto
        w 0 rlineto
        0 h rlineto
        w neg 0 rlineto
        closepath
    end
} def

/portrait {
    1 sqrt2
} def

/landscape {
    sqrt2 1 
} def

/sqrt2 2 sqrt def
/aseries { % x y n orientation
    [/orientation /n] dup length 2 add dict begin { exch def } forall
        /factor sqrt2 n exp def
        orientation load exec [/h /w] { exch factor div def } forall
        0 0 w h rectangle 
    end
} def

